#!/usr/bin/gnuplot

reset

#randcolor(r) = ((rand(0)*0xFF0000) + (rand(0)*0x00FF00) + (rand(0)*0x0000FF))
#randcolor(r) = (((r/1000)*0xFF0000) + ((r/1000)*0x00FF00) + ((r/1000)*0x0000FF))
#randcolor(r) = (((r/1000)*0xFF0000) + (rand(0)*0x00FF00) + (rand(r)*0x0000FF))

pinkcolor = 0xFF69B4

set  lmargin at screen 0.10
set  rmargin at screen 0.95
set  bmargin at screen 0.25
set  tmargin at screen 0.85
set  datafile separator ","
set  title "Oferta de modelos de bicicletas BMX por tienda"
set  ylabel "NÃºmero de modelos"
set  xlabel "Tienda"
set  output 'stats_models_BMX_small.png'
set  terminal png truecolor font 'Verdana,10' size 640,480
set  grid
set  boxwidth 0.85 absolute
set  style fill transparent solid 1 noborder
set  xtic rotate by -45 scale 0 font ",10"

plot './stats_models_BMX.txt' using ($0):2:(pinkcolor):xticlabels(1) w boxes lc rgb variable notitle
